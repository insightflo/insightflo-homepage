---
// @TASK P3-T1 - About 섹션 구현
// @SPEC specs/screens/about.yaml

import ValueCard from '../common/ValueCard.astro';

const values = [
  {
    icon: '💡',
    title: '기술 혁신',
    description: '최신 AI 기술을 비즈니스에 적용합니다'
  },
  {
    icon: '🤝',
    title: '고객 중심',
    description: '고객의 성공이 우리의 성공입니다'
  },
  {
    icon: '✨',
    title: '신뢰와 품질',
    description: '안정적이고 검증된 솔루션을 제공합니다'
  }
];
---

<section
  id="about"
  class="py-20 px-6 bg-white"
  aria-labelledby="about-heading"
>
  <div class="max-w-7xl mx-auto">
    <!-- 섹션 타이틀 -->
    <h2
      id="about-heading"
      class="text-4xl font-bold text-slate-900 text-center mb-6"
    >
      회사 소개
    </h2>

    <!-- 비전/미션 문구 -->
    <p class="text-xl text-slate-600 text-center max-w-3xl mx-auto mb-12">
      AI 기술과 시스템 개발 전문성을 바탕으로<br />
      비즈니스의 디지털 혁신을 함께합니다.
    </p>

    <!-- 핵심 가치 그리드 -->
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-6"
      role="list"
      aria-label="핵심 가치"
    >
      {
        values.map((value) => (
          <div role="listitem">
            <ValueCard {...value} />
          </div>
        ))
      }
    </div>
  </div>
</section>
