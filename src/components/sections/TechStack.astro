---
// @TASK 디자인 리뉴얼 - TechStack
// @SPEC design/code.html#tech-stack

const techCategories = [
  {
    name: 'Frontend',
    items: [
      { name: 'Vue.js', color: 'bg-emerald-400' },
      { name: 'TypeScript', color: 'bg-blue-400' },
    ]
  },
  {
    name: 'Backend',
    items: [
      { name: 'Java / Spring', color: 'bg-red-400' },
      { name: 'Express.js', color: 'bg-green-400' },
    ]
  },
  {
    name: 'AI Models',
    items: [
      { name: 'Claude 3.5', color: 'bg-amber-400' },
      { name: 'GPT-4o', color: 'bg-indigo-400' },
      { name: 'Llama 3', color: 'bg-purple-400' },
    ]
  },
  {
    name: 'AI Framework & RAG',
    items: [
      { name: 'LangChain', color: 'bg-blue-600' },
      { name: 'LlamaIndex', color: 'bg-orange-400' },
    ]
  },
  {
    name: 'Database',
    items: [
      { name: 'PostgreSQL', color: 'bg-blue-500' },
      { name: 'Pinecone', color: 'bg-cyan-400' },
    ]
  },
  {
    name: 'Cloud Infrastructure',
    items: [
      { name: 'AWS', color: 'bg-orange-500' },
      { name: 'GCP', color: 'bg-blue-400' },
    ]
  },
];
---

<section id="tech-stack" class="py-24 bg-slate-50">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-sm font-bold text-deep-blue uppercase tracking-widest mb-3">Tech Stack</h2>
      <h3 class="text-4xl font-bold text-navy">신뢰할 수 있는 기술 스택</h3>
    </div>

    <!-- Tech Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      {techCategories.map((category) => (
        <div class="space-y-4">
          <h5 class="text-xs font-bold text-slate-400 uppercase tracking-wider">{category.name}</h5>
          <div class="flex flex-wrap gap-2">
            {category.items.map((item) => (
              <div class="flex items-center gap-2 px-4 py-2 bg-white border border-slate-200 rounded-lg text-sm font-semibold text-slate-700">
                <span class={`w-2 h-2 rounded-full ${item.color}`}></span>
                {item.name}
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .text-deep-blue { color: #1E3A5F; }
  .text-navy { color: #0F172A; }
</style>
