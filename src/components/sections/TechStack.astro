---
// @TASK P2-T3 - 기술 스택 섹션
// @SPEC specs/screens/tech-stack.yaml

import TechBadge from '../common/TechBadge.astro';
import { techStack } from '../../data/techStack';
---

<section id="tech" class="py-20 px-6 bg-slate-50">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-4xl font-bold text-slate-900 text-center mb-12">
      기술 스택
    </h2>
    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4"
      role="list"
      aria-label="Technology stack badges"
    >
      {
        techStack.map((tech) => (
          <TechBadge name={tech.name} icon={tech.icon} />
        ))
      }
    </div>
  </div>
</section>
