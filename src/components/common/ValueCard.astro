interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="bg-slate-50 p-6 rounded-xl text-center hover:shadow-lg transition-all duration-300 hover:scale-105"
>
  <span class="text-4xl mb-4 block" aria-hidden="true">{icon}</span>
  <h3 class="text-xl font-bold text-slate-900 mb-2">{title}</h3>
  <p class="text-slate-600">{description}</p>
</div>
