---
// @TASK P2-T3 - 기술 뱃지 컴포넌트
// @SPEC specs/screens/tech-stack.yaml

interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<div
  class="bg-white p-4 rounded-lg border border-slate-200 hover:shadow-md hover:border-blue-300 transition-all flex flex-col items-center justify-center gap-2"
  role="article"
  aria-label={`Technology: ${name}`}
>
  <span class="text-2xl" aria-hidden="true">{icon}</span>
  <span class="text-sm font-medium text-slate-700">{name}</span>
</div>
